@{
    ViewBag.Title = "Xác thực thông tin khảo sát";
}

<style>
    #spinner-div {
        position: fixed;
        display: none;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        text-align: center;
        background-color: rgba(255, 255, 255, 0.8);
        z-index: 2;
    }
</style>

<input type="hidden" class="form-control" id="base_url" name="base_url" value="@Url.Content("~/")">

<div id="vungbon" style="padding-top: 50px; padding-bottom: 70px;">
    <div class="container">
        <div class="row">
            <div class="col-md-12 columns">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="text-center">
                            <h2 class="text-center" style="font-weight: 700">XÁC THỰC THÔNG TIN</h2>
                        </div>
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a onclick="activaTab('home')" style="color: #0a58ca" class="nav-link active" data-toggle="tab" href="#home">Xác thực</a>
                            </li>
                            <li class="nav-item">
                                <a onclick="activaTab('menu1')" style="color: #0a58ca" class="nav-link" data-toggle="tab" href="#menu1">#</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div id="home" class="container tab-pane active" style="margin-left: 0">
                                <div class="mt-4 p-5 text-black rounded" style="background-color: #E7E9EB!important">
                                    <div id="spinner-div" class="pt-5">
                                        <div class="spinner-border text-primary" role="status">
                                        </div>
                                    </div>
                                    <form id="form_xacthuc_ctdt" style="margin-bottom: 5px">
                                        <div class="mb-3">
                                            <select class="form-control" id="select2-xacthucctdt-khoa">
                                                <option selected>Chọn khoa</option>
                                                @foreach (var item in ViewBag.KhoaList)
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <select class="form-control" id="select2-xacthucctdt-ctdt">
                                                <option selected>Chọn chương trình đào tạo</option>
                                            </select>
                                        </div>
                                        <div class="d-flex justify-content-center">
                                            <button style="width: 150px; margin: 5px" id="btnXacThucCTDT"
                                                    type="button" class="btn btn-primary"
                                                    data-loading-text="Đang xử lý....">
                                                Xác thực
                                            </button>
                                            <button style="width: 150px; margin: 5px"
                                                    onclick="window.location='@Url.Action("Index","Home")';" type="button"
                                                    class="btn btn-secondary">
                                                Trở về trang chủ
                                            </button>
                                        </div>
                                        <br>
                                        <div id="show_error_xacthuc_ctdt" class="alert alert-danger d-flex align-items-center"
                                             role="alert" style="visibility:hidden">
                                            <div id="error_xacthuc_ctdt"></div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div id="menu1" class="container tab-pane active" style="margin-left: 0"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script> <!-- Thư viện SweetAlert -->

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        var isKhoaSelected = false;

        $("#btnXacThucCTDT").click(function () {
            if (!isKhoaSelected) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Vui lòng chọn khoa trước khi xác thực!'
                });
                return;
            }

            var khoa = $("#select2-xacthucctdt-khoa").val();
            var ctdt = $("#select2-xacthucctdt-ctdt").val();
            $.ajax({
                type: "POST",
                url: "@Url.Action("SaveDataXacThucCTDT", "Home")",
                data: { khoa: khoa, ctdt: ctdt },
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Xác thực thành công!',
                            showConfirmButton: false,
                            timer: 2000
                        }).then(function () {
                            window.location.href = "@Url.Action("Survey", "Survey")" + "?id=" + response.idPhieu;
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Có lỗi xảy ra khi lưu dữ liệu vào session: ' + response.message
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Có lỗi xảy ra khi gửi dữ liệu lên server!'
                    });
                }
            });
        });

        $("#select2-xacthucctdt-khoa").change(function () {
            if ($(this).val() == "Chọn khoa") {
                isKhoaSelected = false;
                $("#select2-xacthucctdt-ctdt").empty();
                $("#select2-xacthucctdt-ctdt").append("<option selected>Chọn chương trình đào tạo</option>");
                return;
            }
            isKhoaSelected = true;
            $.get("/Home/LoadCTDTByKhoa", { khoaId: $(this).val() }, function (data) {
                $("#select2-xacthucctdt-ctdt").empty();
                $.each(data, function (index, row) {
                    $("#select2-xacthucctdt-ctdt").append("<option value='" + row.id_ctdt + "'>" + row.ten_ctdt + "</option>");
                });
            });
        });
    });

    function activaTab(tabID) {
        $('.nav-tabs a[href="#' + tabID + '"]').tab('show');
    }
</script>


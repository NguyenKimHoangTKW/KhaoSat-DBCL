@{
    ViewBag.Title = "Answer phiếu khảo sát - TDMU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content" style="padding-top: 50px;">
    <div class="container">
        <div class="page-header text-center mb-4">
            <h2 class="header-title">Kết quả khảo sát</h2>
        </div>
        <div class="card shadow-sm">
            <div class="card-body">
                <button class="btn btn-secondary btn-tone mb-4" onclick="window.location.href='/Survey/ListAnswerSurvey?id=@ViewBag.IDPhieu'">Quay trở về</button>
                <div id="surveyContainer" class="table-responsive">
                    <input type="hidden" id="viewbagid" value="@ViewBag.id" />
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .header-title {
        font-size: 2rem;
        font-weight: bold;
    }

    .card {
        border-radius: 10px;
    }

    .table thead th {
        background-color: #007bff;
        color: white;
        text-align: center;
    }

    .table tbody td, .table tbody th {
        vertical-align: middle;
    }

    .table tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .table th, .table td {
        padding: 15px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
@Scripts.Render("~/bundles/User/AnswerPKS")
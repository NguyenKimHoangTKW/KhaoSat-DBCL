            <input type="hidden" id="change_Ngay_Tao" name="change_Ngay_Tao" />
            <input type="hidden" id="change_Ngay_Cap_Nhat" name="change_Ngay_Cap_Nhat" />
            <label class="col-sm-2 col-form-label control-label">Tên Lớp *</label>
            <div class="col-sm-10">
